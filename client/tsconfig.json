{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@api/*": ["./src/api/*"],
       "@/*": ["*"]
      },
      "rootDir": "./src",  // 设置 rootDir 为 src 目录
      "outDir": "./dist"   // 设置输出目录
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
